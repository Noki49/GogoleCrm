                <td>{{ entity.qttStock }}</td>
                <td>{{ entity.qttSeuil }}</td>
                <td>
                <table><tr>
                    <td>
                        <a href="{{ path('stockmanager_show', { 'id': entity.id }) }}"><input type="button" value="voir" /></a>
                    </td>
                    <td>
                        <a href="{{ path('stockmanager_edit', { 'id': entity.id }) }}"><input type="button" value="modifier" /></a>
                    </td>
		    <td>{{ form(boutonDelete[entity.id]) }}</td>
                </tr></table>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('stockmanager_new') }}">
                <input type="button" value="créer produit" />
            </a>
    {% endblock %}
