{% extends '::base.html.twig' %}

{% block body -%}
    <h1>stockManager list</h1>

    <table class="records_list" border=2>
        <thead>
            <tr>
                <th>Référence</th>
                <th>Nom</th>
                <th>Prix Achat</th>
                <th>Prix Vente</th>
                <th>Marge</th>
                <th>Qtt stock</th>
                <th>Qtt seuil</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {#{<td><a href="{{ path('stockmanager_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>}#}
