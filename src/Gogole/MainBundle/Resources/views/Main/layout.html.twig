<!DOCTYPE html>
	<html>
		<head>
			<meta charset="utf-8"> 
	   		<meta http-equiv="X-UA-Compatible" content="IE=edge">
	    		<meta name="viewport" content="width=device-width, initial-scale=1">
	    		<title>Gogole CRM</title>
	   		<meta name="description" content="Gogole CRM">
			{% include'GogoleMainBundle:Main:stylesheet.html.twig' %}	
		</head>
		<body>
			<div class="container-fluid">
				<div class="row">
					{% include 'GogoleMainBundle:Main:menu.html.twig' %}
				</div>
				<div class="col-sm-9 col-md-12">
					<div class="page-header">
						<h3 class="text-center"><span class="glyphicon glyphicon-th-list"></span>Entreprise</h3>
					</div>
					<div class="row">
						{# <!-- Box principal --> #}
						<div class="col-md-offset-2 col-md-8 thumbnail">
							<div id="box">
								<a href="{{ path('gogole_main_homepage')}}" class="thumbnail glyphicon glyphicon-dashboard" id="dash"></a>

								<a href="{{ path('gogole_tchat_homepage')}}" class="thumbnail glyphicon glyphicon-envelope" id="tchat"></a>
								{% block tchat %}
								{% endblock %}
								<a href="{{ path('gogole_todo_homepage')}}" class="thumbnail glyphicon glyphicon-list-alt" id="todo"></a>
								{% block todo %}
								{% endblock %}
							</div>
						</div>
					</div>
					<div class="row">
						{# <!-- Calendrier --> #}
						<a href="#" class="thumbnail glyphicon glyphicon-calendar" id="toggler"></a>
						<div class="col-md-5" id="toggle">
							<div id="calendar"></div>	
						</div> {# <!-- end Toggle --> #}
					</div> {# <!-- end Row --> #}
				</div> {# <!-- end col --> #}
			</div> {# <!-- end Container-fluid --> #}
			{% include'GogoleMainBundle:Main:script.html.twig' %}
		</body>
	</html>

