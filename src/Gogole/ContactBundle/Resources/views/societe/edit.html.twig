{% extends 'GogoleMainBundle:Main:index.html.twig' %}

{% block body -%}
    <h2 class="text-center">Modifier une société</h2>
    <div class="row">
    	<div class="col-md-offset-5">
	    	{{ form_start(edit_form) }}
				<p>{{ form_row(edit_form.nomSociete) }}</p>
				<p>{{ form_row(edit_form.siretSociete) }}</p>
				<P>{{ form_row(edit_form.eMailSociete) }}</p>
				<p>{{ form_row(edit_form.telSociete) }}</p>
			    <input type="submit" class="btn btn-default" value="Modifier" />
			{{ form_end(edit_form) }}
			<br />
			{{ form(delete_form) }}
		</div>
	</div>
{% endblock %}
