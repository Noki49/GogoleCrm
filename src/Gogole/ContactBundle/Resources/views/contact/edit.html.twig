{% extends 'GogoleMainBundle:Main:index.html.twig' %}

{% block body %}
<h2 class="text-center">Modifier un contact</h2>
	<div class="row">
		<div class="col-md-offset-5">
			{{ form_start(edit_form) }}
				<p>{{ form_row(edit_form.nomContact) }}</p>
				<p>{{ form_row(edit_form.prenomContact) }}</p>
				<p>{{ form_row(edit_form.eMailContact) }}</p>
				<p>{{ form_row(edit_form.telContact) }}</p>
				<p>{{ form_row(edit_form.commentaireContact) }}</p>
				<p>{{ form_row(edit_form.dateDeNaissanceContact) }}</p>
				<p>{{ form_row(edit_form.societe) }}</p>
				<p>{{ form_row(edit_form.categorieContact) }}</p>
				<input type="submit" class="btn btn-default" value="Modifier" />
			{{ form_end(edit_form) }}
			<br />
		{{ form(delete_form) }}
		</div>
	</div>
{% endblock %}
