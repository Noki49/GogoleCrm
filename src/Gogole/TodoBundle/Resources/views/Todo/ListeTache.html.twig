{% extends "GogoleMainBundle:Mainview:index.html.twig"%}

{% block body %}
	<div class ="row" >
		<div class ="col-md-offset-3 col-md-6 col-md-offset-3">
			
			<br/> 
				<h1>Votre todoListe</h1>
			<br/>
			<a href="{{ path('gogole_todo_creationTache') }}"><button>Creer une tache</button></a>

			</br>	 <!-- tableau des taches encourt -->

			<h2>tache actuelle</h2>
			<table class="table table-hover">
				<tr>
					<td>Date de création</td>
					<td>Votre tache</td>
					<td>Date d'échéance</td>
				</tr>
        		{% for uneTache in tache_actuelle %}
        		<tr>        				
    				<td>{{ uneTache.dateCreation|date('d/m/Y') }}</td>
		           	<td>{{ uneTache.tache }}</td>
		            <td>{{ uneTache.dateEcheance|date('d/m/Y')}}</td>
					<td>
						<a href="{{ path('gogole_todo_modifierTache',{id:uneTache.id}) }}"><button type="submit" class="btn btn-default">modifier</button></a>
						
					</td>
					<td>
						<a href="{{ path('gogole_todo_supprimerTache',{id:uneTache.id}) }}"><button type="submit" class="btn btn-default">supprimer</button></a>	
					</td>
				</tr>  
      			{% endfor %}
	       	</table>

	       </br>	<!-- tableau des taches terminées -->

			<h2>tache terminer</h2>
			<table class="table table-hover">
				<tr>
					<td>Date de création</td>
					<td>Votre tache</td>
					<td>Date d'échéance</td>
					<td>Date terminées</td>
				</tr>
        		{% for uneTache in tache_terminer %}
        		<tr>        				
    				<td><del>{{ uneTache.dateCreation|date('d/m/Y') }}</del></td>
		           	<td><del>{{ uneTache.tache }}</del></td>
		            <td><del>{{ uneTache.dateEcheance|date('d/m/Y')}}</del></td>
		            <td><del>{{ uneTache.dateFait|date('d/m/Y')}}</del></td>
					<td>
						<a href="{{ path('gogole_todo_modifierTache',{id:uneTache.id}) }}"><button type="submit" class="btn btn-default">modifier</button></a>
						
					</td>
					<td>
						<a href="{{ path('gogole_todo_supprimerTache',{id:uneTache.id}) }}"><button type="submit" class="btn btn-default">supprimer</button></a>	
					</td>
				</tr>  
      			{% endfor %}
	       	</table>
		</div>
	</div>
{% endblock%}